/* pages/register/register.wxss */

.page {
  width: 100%;
  background-color: #f5f5f5;
}

.loginbg {
  width: 100%;
}

.loginView {
  width: 70%;
  position: absolute;
  left: 15%;
  top: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  border: solid 1px #fff;
  color: #fff;
  font-size: 16px;
  margin-bottom: 10px;
}

.loginbtn {
  width: 100%;
  padding: 10px;
  border-radius: 5px;
  background-color: #1b82d1;
  color: #fff;
  text-align: center;
  margin-top: 30px;
  font-size: 16px;
}
